# ==============================================
# INVENTORY MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# ==============================================

# Database Configuration
DATABASE_URL="postgresql://inventory_user:inventory_pass@localhost:5432/inventory_db"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=inventory_db
DB_USER=inventory_user
DB_PASSWORD=inventory_pass

# Redis Configuration (Session Storage & Caching)
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Configuration
NODE_ENV=development
API_PORT=5000
FRONTEND_PORT=3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
PASSWORD_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,xls,xlsx

# Email Service Configuration
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@inventory.local
EMAIL_FROM_NAME=Inventory Management System

# Alternative Email Providers (uncomment to use)
# EMAIL_SERVICE=mailgun
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_mailgun_domain

# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CURRENCY=USD

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_APP_NAME=Inventory Management System
NEXT_PUBLIC_APP_DESCRIPTION=Complete inventory and e-commerce solution
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
NEXT_PUBLIC_COMPANY_NAME=Your Company Name
NEXT_PUBLIC_SUPPORT_EMAIL=support@inventory.local

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-min-32-chars
COOKIE_SECRET=your-cookie-secret-key-min-32-chars

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_FILE_UPLOAD=true
ENABLE_NOTIFICATIONS=true

# System Settings
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Inventory Settings
STOCK_RESERVATION_TIMEOUT=30
LOW_STOCK_THRESHOLD=10
ENABLE_BATCH_TRACKING=false
ENABLE_EXPIRY_TRACKING=false
AUTO_FULFILL_ORDERS=false

# E-commerce Settings
GUEST_CHECKOUT_ENABLED=true
CART_ABANDONMENT_HOURS=24
ORDER_CONFIRMATION_EMAIL=true
SHIPPING_CALCULATION=flat_rate
TAX_CALCULATION=inclusive

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
ENABLE_DEBUG_LOGS=true
SEED_DATA_ON_STARTUP=false
RESET_DB_ON_STARTUP=false

# External Services
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=
SENTRY_DSN=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# ==============================================
# PRODUCTION NOTES:
# - Change all secret keys to secure random values
# - Use strong database credentials
# - Configure proper email service credentials
# - Set up real Stripe keys for payment processing
# - Enable SSL/TLS in production
# - Set appropriate CORS origins
# - Configure backup settings
# ==============================================